			case 5:
				
				break;
			case 6:
				
				break;
			case 7:
				salir=false;
				break;
			default:
				System.out.println("No a introducido ninguna opcion del menu saliendo del programa");
				break;
			}
	
		}while(salir!=false);
			
	}
